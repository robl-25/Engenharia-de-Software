<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.jimy.sussa.Login"
        android:background="@color/lightblue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Titulo"
        android:id="@+id/tvTitulo"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNome"
        android:ems="13"
        android:hint="Nome"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_below="@+id/tvTitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etUsuario"
        android:ems="13"
        android:hint="Usuario"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_below="@+id/etNome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEmail"
        android:ems="13"
        android:hint="Email"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_below="@+id/etUsuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:singleLine="true" />


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/spCurso"
        android:layout_below="@id/etEmail"
        android:spinnerMode="dropdown"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="13"
        android:hint="Crie uma Senha"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/etSenha"
        android:layout_below="@id/spCurso"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="13"
        android:hint="Repita a sua Senha"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/etConfirmacao"
        android:singleLine="true"
        android:layout_below="@+id/etSenha"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/bCadastrar"
        android:layout_marginTop="50dp"
        android:textSize="15dp"
        android:minWidth="140dp"
        android:background="#228000"
        android:textColor="#fdfdfd"
        android:layout_below="@+id/etConfirmacao"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</ScrollView>