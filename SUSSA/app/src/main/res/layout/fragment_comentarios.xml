<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/llCmntProf"
    >

    <TextView
        android:id="@+id/tvComentariosTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMENTARIOS"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/llBotoesComentarios"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvComentariosTitle"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="MAIS RECENTES"
            android:layout_weight="1"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="MAIS VOTADOS"
            android:layout_row="2"
            android:layout_weight="1"
            android:layout_column="2" />
    </LinearLayout>

    <EditText
        android:id="@+id/etCriarComentario"
        android:hint="Criar comentario..."
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittextstyle"
        android:layout_width="600dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_below="@+id/llBotoesComentarios"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvComentarioExemplo"
        android:text="@string/lbl_cmntExample"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittextstyle"
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etCriarComentario"
        android:layout_marginTop="10dp"/>

</RelativeLayout>